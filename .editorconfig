# EditorConfig for copilot_template
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Python files
[*.py]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
end_of_line = lf

# JSON, YAML files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
